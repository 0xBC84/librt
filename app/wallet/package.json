{
  "name": "@librt/wallet",
  "version": "0.0.1",
  "bin": {
    "librt-wallet": "bin/run"
  },
  "dependencies": {
    "@oclif/core": "^1.5.2",
    "@oclif/plugin-help": "^5.1.12",
    "@oclif/plugin-plugins": "^2.1.0",
    "@walletconnect/client": "^2.0.0-beta.23",
    "@walletconnect/ethereum-provider": "^2.0.0-beta.23",
    "@walletconnect/types": "^2.0.0-beta.23",
    "@walletconnect/utils": "^2.0.0-beta.23",
    "bn.js": "^5.2.0",
    "ethers": "^5.5.4",
    "ink": "^3.2.0",
    "react": "^17.0.2",
    "@librt/chain": "*",
    "@librt/config": "*",
    "@librt/ui": "*",
    "@librt/storage": "*"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "main": "dist/index.js",
  "oclif": {
    "bin": "librt-wallet",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": ":",
    "topics": {}
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b && tsc-alias && oclif manifest && oclif readme",
    "dev": "tsc -w & tsc-alias -w",
    "cli:dev": "./bin/dev",
    "lint": "pnpm lint:prettier && pnpm lint:eslint",
    "lint:write": "pnpm lint:prettier:write && pnpm lint:eslint:write",
    "lint:prettier:write": "prettier --write .",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint .",
    "lint:eslint:write": "eslint --fix ."
  },
  "types": "dist/index.d.ts"
}
