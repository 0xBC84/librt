{
  "name": "@librt/fortune",
  "version": "0.0.1",
  "bin": {
    "librt-fortune": "bin/run"
  },
  "dependencies": {
    "@librt/chain": "*",
    "@oclif/core": "^1.9.0",
    "@oclif/plugin-help": "^5.1.12",
    "@oclif/plugin-plugins": "^2.1.0",
    "@walletconnect/ethereum-provider": "^2.0.0-beta.100",
    "@walletconnect/sign-client": "^2.0.0-beta.100",
    "@walletconnect/types": "^2.0.0-beta.100",
    "bn.js": "^5.2.0",
    "ethers": "^5.5.4"
  },
  "dirname": "dist",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "main": "dist/index.js",
  "oclif": {
    "bin": "librt-fortune",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": ":",
    "topics": {}
  },
  "scripts": {
    "build": "pnpm build:contract && pnpm build:cli",
    "build:contract": "hardhat clean && hardhat compile",
    "build:cli": "shx rm -rf dist && tsc -b && tsc-alias && oclif manifest && oclif readme",
    "deploy": "hardhat deploy --network $LIBRT_NETWORK",
    "cli:dev": "./bin/dev",
    "dev": "tsc -w & tsc-alias -w",
    "lint": "pnpm lint:prettier && pnpm lint:eslint",
    "lint:write": "pnpm lint:prettier:write && pnpm lint:eslint:write",
    "lint:prettier:write": "prettier --write .",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint .",
    "lint:eslint:write": "eslint --fix ."
  }
}
