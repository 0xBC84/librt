{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@services/*": ["services/*"]
    }
  },
  "include": [
    "hardhat.config.ts",
    "./index.ts",
    "./commands",
    "./scripts",
    "./deploy",
    "./test",
    "./types/**/*"
  ]
}
